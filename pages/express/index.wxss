.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  color: #fff;
}
.container .title {
	font-size: 110rpx;
}
.container .intro {
	font-size: 36rpx;
	width: 80%;
	text-align: center;
	margin-top: 20rpx;
}
.container .input-wrapper {
	width: 78%;
}
.container .input-wrapper .picker, 
.container .input-wrapper .number {
	height: 88rpx;
	line-height: 88rpx;
	text-align: center;
	border-radius: 32rpx;
	border: 1px solid #eee;
	margin: 88rpx 0;
}
.container .check {
	width: 78%;
	height: 88rpx;
	line-height: 88rpx;
	text-align: center;
	border-radius: 32rpx;
	background-color: #30ad64;
}
